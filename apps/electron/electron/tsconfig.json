{
	"compilerOptions": {
		"outDir": "../dist-electron",
		"module": "commonjs",
		"target": "es2020",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["es2020", "dom"],
		"types": ["node"]
	},
	"include": ["**/*.ts"]
}
